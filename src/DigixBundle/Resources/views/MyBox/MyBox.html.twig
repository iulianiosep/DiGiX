    <body>
      <nav class="navbar navbar-fixed-top navbar-inverse">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">DiGix</a>
          </div>
          <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
              <li><a href="{{path('digix_wall')}}">Tag them</a></li>
              <li><a href="{{path('search_controller')}}">Search them</a></li>
              <li class="active"><a href="{{path('box_page')}}">My Box</a></li>
              <li><a href="{{path('about_page')}}">About</a></li>
              <li><a href="{{path('contact_page')}}">Support</a></li>
