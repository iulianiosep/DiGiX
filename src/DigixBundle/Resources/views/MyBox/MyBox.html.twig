              <a class="tumblr-hover social-slide"  href="#"></a>
            </div>



          </div><!-- /.nav-collapse -->
        </div><!-- /.container -->

      </nav><!-- /.navbar -->


      

      <div class="container">

        <div class="row row-offcanvas row-offcanvas-right">

          <div class="col-xs-12 col-sm-9">
            <p class="pull-right visible-xs">
              <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Sidebar</button>
            </p>

           

           <!--{% for item in picturesArray %}
              <div class="jumbotron">
                <p class="p-news">Paragraf1
                  <img src="{{ item }}" width="300" height="auto"/>
                </p>
              </div>
           {% endfor %}-->
          <div class="jumbotron">
            {% for key,value in picturesArray %}
              <img src="{{value}}" width='500' height='auto'/>
              <p>{{key}}</p>
              <br><br>
            {% endfor %}
          </div>

          <div class="jumbotron">
            {% for key,value in videosArray %}
              <video width='240' height='auto' controls>
                  <source src="{{ value }}">
              </video>
              <p>{{key}}</p>
              <br><br>
            {% endfor %}
          </div>
    </p>

           
     
   </div><!--/.col-xs-12.col-sm-9-->



